<!-- Add the data-processing consent checkbox UI component -->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="first-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="consent-agreements" xsi:type="array">
                                                    <item name="component" xsi:type="string">ProcessEightCheckout_AddValidatedCheckbox/js/view/consent-agreement</item>
                                                    <item name="sortOrder" xsi:type="string">100</item>
                                                    <item name="displayArea" xsi:type="string">before-continue-button</item>
                                                </item>
                                                <!--<item name="additional-step-validators" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="consent-agreements-validator" xsi:type="array">
                                                            <item name="component" xsi:type="string">ProcessEightCheckout_AddValidatedCheckbox/js/view/consent-agreement-validation</item>
                                                        </item>
                                                    </item>
                                                </item>-->
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
